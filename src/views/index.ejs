<%- include('partials/head') %>
<body>    
    <%- include('partials/header') %>
    <section class="hero">
        <article class="hero__content container">
            <h3 class="hero__title">
                Nuevos Ingresos
            </h3>
            <p class="hero__description">
                Descubrí el próximo Funko Pop de tu colección
            </p>
            <a href="/shop" class="hero__link">
                SHOP
            </a>
        </article>
    </section>
    <main class="main-container">
        <section class="collection container">
            <article class="collection__content">
                <h3 class="collection__title">
                    Star Wars & The Mandalorian
                </h3>
                <p class="collection__description">
                    Disfruta de una saga que sigue agregando personajes a su colección.
                </p>
                <a href="/shop" class="collection__link"> 
                    VER COLECCIÓN
                </a>    
            </article>
            <picture class="collection__cover">
                <img src="/images/star-wars/baby-yoda-1.webp" alt="Figura coleccionable Funko de Grogu de la serie El Mandalorian">
            </picture>
        </section>

        <section class="collection container">
            <picture class="collection__cover">
                <img src="/images/pokemon/vulpix-1.webp" alt="Figura coleccionable Funko de Vulpix de la serie Pokemon">
            </picture>
            <article class="collection__content">
                <h3 class="collection__title">
                    Pokemon Indigo
                </h3>
                <p class="collection__description"> 
                    Atrapa todos los que puedas y disfruta de una colección llena de amigos.
                </p>
                <a href="/shop" class="collection__link">
                    VER COLECCIÓN
                </a>    
            </article>

        </section>


        <section class="collection container">
            <article class="collection__content">
                <h3 class="collection__title">
                    Harry Potter
                </h3>
                <p class="collection__description">
                    Revive los recuerdos de una saga llena de magia y encanto.
                </p>
                <a href="/shop" class="collection__link">
                    VER COLECCIÓN
                </a>    
            </article>
            <picture class="collection__cover">
                <img src="/images/harry-potter/snape-patronus-1.webp" alt="Figura coleccionable Funko de patronus de Snape de la película Harry Potter">
            </picture>
        </section>
        <%- include('components/glide') %>
    </main>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="/js/glide.js"></script>
</body>
</html>